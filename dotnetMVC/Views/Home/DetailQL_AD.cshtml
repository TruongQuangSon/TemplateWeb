<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" type="text/css" href="~/css/Admin/ConfirmDelete.css" />
    <link rel="stylesheet" type="text/css" href="~/css/Admin/AddQL.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>

<h2 align="center">Thông tin quản lý</h2>
<br><br>
<div class="row">
  <div class="col-75">
    <div class="container">
      <form method="post">
      
        <div class="row">
          <div class="col-50">
            <h3>Thông tin chi tiết</h3>
            <label for="fname"><i class="fa fa-user"></i> Full Name</label>
            <input type="text" id="fname" name="firstname" readonly value="Nguyễn Văn A">
            <label for="email"><i class="fa fa-envelope"></i> Email</label>
            <input type="text" id="email" name="email" readonly value="nguyenvana@gmail.com">
            <label for="adr"><i class="fa fa-address-card-o"></i> Address</label>
            <input type="text" id="adr" name="address" readonly value="K59/32, Lien Chieu, Da Nang, Viet Nam">
            <label for="city"><i class="fa fa-phone"></i> Phone Number</label>
            <input type="text" id="phone" name="phone" readonly value="0966778899">

            <div class="row">
              <div class="col-50">
                <label for="birthday"><i class="fa fa-user"></i> Username:</label>
                <input type="text" id="username" name="username" readonly value="HoangTuCoDon">
              </div>
              <div class="col-50">
                <label for="password"><i class="fa fa-pas"></i> Password:</label>
                <input type="password" id="password" name="password" readonly value="nubacachi">
                <input type="checkbox" onclick="myFunction()">Show Password
              </div>

            </div>

            <div class="row">
              <div class="col-50">
                <label for="birthday">Gender</label>
                <input type="text" id="gender" name="gender" readonly value="Nam">
              </div>
              <div class="col-50">
                <label for="birthday">Birthday:</label>
                <input type="text" id="birthday" name="birthday" readonly value="20/01/1900">
              </div>
            </div>
          </div> 
        </div>
        <div class="row">
              <div class="col-25" >
                <input style="background-color: red; " type="button" value="Cancel" class="btn" onclick="window.location.href='ListQL_AD'">
              </div>
              
              <div class="col-25" >
                <input style="background-color: red; " type="button" value="Xóa" class="btn" onclick="document.getElementById('id01').style.display='block'">
              </div>
              <div class="col-25">
                <input type="button" value="Chỉnh sửa" class="btn" onclick="window.location.href='EditQL_AD'">
              </div>

            </div>

      </form>
    </div>
  </div>
</div>

<div id="id01" class="modal" style="display: none; ">
    <span onclick="document.getElementById('id01').style.display='none'" class="close" title="Close Modal">×</span>
    <form class="modal-content" action="/action_page.php">
      <div class="container">
        <h1>Delete Account</h1>
        <p>Are you sure you want to delete your account?</p>
      
        <div class="clearfix">
          <button type="button" onclick="document.getElementById('id01').style.display='none'" class="cancelbtn">Cancel</button>
          <button type="button" onclick="document.getElementById('id01').style.display='none'" class="deletebtn">Delete</button>
        </div>
      </div>
    </form>
  </div>

<script>
// Get the modal
  var modal = document.getElementById('id01');

  // When the user clicks anywhere outside of the modal, close it
  window.onclick = function(event) {
    if (event.target == modal) {
      modal.style.display = "none";
    }
  }
</script>

<script>
function myFunction() {
  var x = document.getElementById("password");
  if (x.type === "password") {
    x.type = "text";
  } else {
    x.type = "password";
  }
}
</script>


</body>
</html>
